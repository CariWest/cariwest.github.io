<div class="container">
  <div class='row'>
    <div class='room-for-navbar'>
      <%= form_for :article, url: articles_path(@article) do |f| %>
        <p>
          <%= f.label :title %>
          <%= f.text_field :title, placeholder: "Title" %>
        </p>

        <p>
          <%= f.label :exerpt %>
          <%= f.text_area :excerpt, placeholder: "Excerpt" %>
        </p>

        <p>
          <%= f.label :content %>
          <%= f.text_area :content, placeholder: "Blog Post" %>
        </p>

        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
  </div>
</div>